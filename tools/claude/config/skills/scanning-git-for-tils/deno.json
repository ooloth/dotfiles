{
  "tasks": {
    "scan": "deno run --allow-net --allow-env --allow-run scan_git.ts",
    "publish": "deno run --allow-net --allow-env --allow-run publish_til.ts",
    "test": "deno test --allow-net --allow-env --allow-run"
  },
  "imports": {
    "zod": "npm:zod@^3.22.4",
    "@notionhq/client": "npm:@notionhq/client@^2.2.15"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
